<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fiap.eightshop">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EightShop">
        <activity android:name=".ui.product.ProductRowActivity"></activity>
        <activity android:name=".ui.favoritecart.FavoriteShoppingCartRow" />
        <activity
            android:name=".ui.hall.HallRow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.product.CustomList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.company.ListMerchantActivity"
            android:label="@string/title_activity_list_merchant"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.product.ProductRow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>