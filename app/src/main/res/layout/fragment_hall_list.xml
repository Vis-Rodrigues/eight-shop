    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:layout_marginTop="100dp"
        android:background="?android:attr/actionModeSplitBackground"
        android:orientation="vertical"
        android:id="@+id/linear">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="10dp"
            android:text="Escolha um corredor"
            android:textColor="#000"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/hallListView"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintBottom_toTopOf="@id/mobile_navigation"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/hallProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="102dp"
        android:layout_height="85dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

